# Core Blockchain Configuration
# Network: Core Mainnet (Chain ID: 1116)
CORE_RPC_URL=https://rpc.ankr.com/core

# Smart Contract Addresses
NEXT_PUBLIC_CONTRACT_ADDRESS=<your-deployed-creature-nft-contract-address>

# Marketplace Operator Configuration
# This wallet will handle NFT transfers on behalf of users
MARKET_OPERATOR_PK=<your-operator-private-key-with-0x-prefix>
NEXT_PUBLIC_MARKET_OPERATOR=<your-operator-public-address>

# IPFS/Pinata Configuration
# For decentralized metadata storage
PINATA_API_KEY=<your-pinata-api-key>
PINATA_SECRET_API_KEY=<your-pinata-secret-key>
PINATA_JWT=<your-pinata-jwt-token>
GATEWAY_URL=<your-pinata-gateway-url>

# Supabase Configuration
# For database and user management
NEXT_PUBLIC_SUPABASE_URL=<your-supabase-project-url>
NEXT_PUBLIC_SUPABASE_ANON_KEY=<your-supabase-anon-key>

# Optional: Development/Testnet Override
# Uncomment to use testnet instead of mainnet
# CORE_RPC_URL=https://rpc.test2.btcs.network
# Chain ID will automatically adjust based on RPC URL

# Optional: Additional Configuration
# NODE_ENV=production
# NEXT_PUBLIC_APP_URL=https://your-domain.com
